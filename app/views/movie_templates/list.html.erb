<h1>List of Movies</h1>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Director</th>
    <th>Year</th>
        <th>Duration</th>
    <th></th>
  </tr>
<% Movie.all.each do |a_movie| %>
  <% matching_records = Director.where({ :id => a_movie.director_id })%>
      <% director_name = matching_records.at(0).name %> 
    <tr>
      <td><%= a_movie.id %></td>
      <td><img src="<%= a_movie.image %>" width="100"></td>
      <td><%= a_movie.title %></td>
      <td><%= director_name %></td>
      <td><%= a_movie.year %></td>
      <td><%= a_movie.duration %></td>
            <td><a href="/movies/<%= a_movie.id %>">Show details</a></td>
    </tr>
  <% end %>

</table>
