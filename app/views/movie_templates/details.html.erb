<h1>Movie #<%= @the_movie.id %> Details</h1>

<a href="/movies">Go back</a>

<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @the_movie.title %></dd>

  <dt>Year</dt>
  <dd><%= @the_movie.year %></dd>

  <dt>Description</dt>
  <dd><%= @the_movie.description %></dd>

  <dt>Image</dt>
  <dd><img src="<%= @the_movie.image %>" width="100"></dd>

 <dt>Director</dt>
  <dd><% matching_records = Director.where({ :id => @the_movie.director_id })%>
      <%= matching_records.at(0).name %> </dd>

  <dt>Duration</dt>
  <dd><%= @the_movie.duration %> minutes</dd>

   <dt>Created at</dt>
  <dd><%= @the_movie.created_at %></dd>

   <dt>Updated at</dt>
  <dd><%= @the_movie.updated_at %></dd>
</dl>
