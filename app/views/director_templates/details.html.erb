<h1>Director #<%= @the_director.id %> Details</h1>

<a href="/directors">Go back</a>

<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @the_director.name %></dd>

  <dt>Dob</dt>
  <dd><%= @the_director.dob %></dd>

  <dt>Bio</dt>
  <dd><%= @the_director.bio %></dd>

  <dt>Image</dt>
  <dd><img src="<%= @the_director.image %>" width="100"></dd>

   <dt>Created at</dt>
  <dd><%= @the_director.created_at %></dd>

   <dt>Updated at</dt>
  <dd><%= @the_director.updated_at %></dd>
</dl>

<hr>
<h1>Filmography</h1>
<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>

 <% Movie.where({ :director_id => @the_director.id }).each do |a_film| %>
  
    <tr>
      <td><%= a_film.id %></td>
      <td><img src="<%= a_film.image %>" width="100"></td>
      <td><%= a_film.title %></td>
      <td><%= a_film.year %></td>
      <td><%= a_film.director_id %></td>
      <td><a href="/movies/<%= a_film.id %>">Show details</a></td>
    </tr>
  <% end %>

</table>
